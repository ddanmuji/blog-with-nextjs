    "update": "yarn upgrade && yarn syncyarnlock -s -k"
  },
  "dependencies": {
    "axios": "^1.1.3",
    "date-fns": "^2.29.3",
    "gray-matter": "^4.0.3",
    "next": "^12.3.1",
